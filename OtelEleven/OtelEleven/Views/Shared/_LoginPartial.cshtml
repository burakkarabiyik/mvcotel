@using Microsoft.AspNet.Identity
@using OtelEleven.Models
@{
    if(Request.IsAuthenticated)
    { 
      
    }
    }
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    
        ApplicationDbContext db = new ApplicationDbContext();
        var kullaniciadi = db.Users.Find(User.Identity.GetUserId());
        var ad = kullaniciadi.Ad;

   <div class="row">
      <div class="col-md-12">
          <ul class="login">
              <li class="kisi" style="font-size:25px">
                     @ad.ToUpper() @kullaniciadi.Soyad.ToUpper()&ensp; @Resources.Home.hos
              </li>
              <li class="secenekler" style="font-size:25px">
                  <a href="javascript:document.getElementById('logoutForm').submit()">@Resources.Home.Cik</a>
                  @Html.ActionLink(@Resources.Home.control, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                @Html.RouteLink(Resources.Home.yorumyap, "Yorumyap")
              
              </li>
          </ul>
      </div>
   </div>
    }
}
else
{
    <ul class="loginpartial">
        <li style="margin-right:15px">@Html.ActionLink(Resources.Home.UyeOl, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Resources.Home.GirişYap, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
