<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container back">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-10 col-md-2">
                    <ul class="yonlendir">
                        <li>@Html.ActionLink("FR", "Index", "Home")</li>
                        <li>@Html.ActionLink("English", "ChangeCulture", "Ana", new { lang = "en", returnurl = this.Request.RawUrl }, null)</li>
                        <li>@Html.ActionLink("IT", "Index", "Home")</li>
                        <li class="active">@Html.ActionLink("Türkçe", "ChangeCulture", "Home", new { lang = "tr", returnUrl = this.Request.RawUrl }, null)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="navbar">
            <div class="container">
                <div class="row ">
                    <div class="col-md-3" style="color:white;font-size:25px;font-family:'Chaparral Pro'" > 

                        <img class="img-responsive img-circle col-md-12" src="~/Image/inci.jpg" />
                    </div> 
                    <div class="col-md-offset-4 col-md-4">
                        <br />
                        @Html.Partial("_LoginPartial")
                    </div>
                    <button type="button" class="navbar-toggle" style="color:black;" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="glyphicon glyphicon-align-justify"></span>
                      </button>

                </div><br />
                <div class="row resim">
                    <div class="navbar-collapse collapse">
                        
                        <div class="col-xs-11 col-md-offset-1" style="text-align:center">
                            <ul class="liste">
                                <li>@Html.ActionLink(Resources.Home.Anasayfa, "Anasayfa", "Ana")</li>
                                <li>@Html.ActionLink(Resources.Home.Odalar, "Odalar", "Ana")</li> 
                                <li>@Html.ActionLink(Resources.Home.Rezervasyon, "Rezervasyon", "Ana")</li>
                                <li>@Html.ActionLink(Resources.Home.Kampanyalar, "Ekstralar", "Ana")</li>
                                <li>@Html.ActionLink(Resources.Home.Etkinlikler, "Etkinlikler", "Ana")</li>
                                <li>@Html.ActionLink(Resources.Home.Hakkımızda, "Hakkimizda", "Ana")</li> 
                                <li>@Html.ActionLink(Resources.Home.Admin, "Contact", "Home")</li>
                            </ul> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <div class="container body-content icerik"> 
        @RenderBody()
        <hr />
        <footer class="alt" style="background-color:#330B24;">
            <div class="row">
                <div class="col-md-4 alt" style="color:#99FFB3">
                    @Html.ActionLink("F", "Index", "Home")
                    @Html.ActionLink("T", "Index", "Home")
                    @Html.ActionLink("İ", "Index", "Home")
                </div>
                <div class="col-md-4 alt" style="text-align:center;color:#99FFB3">
                    @Html.ActionLink("Anasayfa", "Anasayfa", "Ana") &
                    @Html.ActionLink("İletişim", "Iletisim", "Ana") &
                    @Html.ActionLink("Hakkımızda", "Hakkimizda", "Ana")
                    <br />&ensp;&ensp;
                    <a>Tüm Haklar Saklıdır @@2015</a>


                </div>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
