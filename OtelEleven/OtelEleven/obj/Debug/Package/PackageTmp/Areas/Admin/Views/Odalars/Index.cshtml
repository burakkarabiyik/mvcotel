@model IEnumerable<OtelEleven.Models.Odalar>

@{
    ViewBag.Title = "Oda Resimleri";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
 
<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Fotoğraflar")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <div class="col-md-8"><img class="img-thumbnail" style="width: 100%; height: auto;" src="data:image/png;base64,@System.Convert.ToBase64String(item.Foto1)"></div>
</td>
        <td class="col-md-4">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
