<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title // İncİ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/bootstrapp")  
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }
    </style>
     
</head>
<body>
    <div class="container back">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-10 col-md-2">
                    <ul class="yonlendir">
                        
                        <li>@Html.ActionLink("EN", "ChangeCulture", "Ana", new { lang = "en", returnurl = this.Request.RawUrl }, null)</li>
                         <li class="active">@Html.ActionLink("TR", "ChangeCulture", "Ana", new { lang = "tr", returnUrl = this.Request.RawUrl }, null)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="navbar">
            <div class="container">
                <div class="row ">
                    <div class="col-md-3" style="color:white;font-size:25px;font-family:'Chaparral Pro'" > 
                        <a href="~/Ana/Anasayfa"><img class="img-responsive img-circle col-md-12" src="~/Image/inci.jpg" /></a>
                        
                    </div> 
                    <div class="col-md-offset-3 col-md-5">
                        <br />
                        @Html.Partial("_LoginPartial")
                    </div>
                    <button type="button" class="navbar-toggle" style="color:black;" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="glyphicon glyphicon-align-justify"></span>
                      </button>

                </div><br />
                <div class="row resim">
                    <div class="navbar-collapse collapse">
                        
                        <div class="col-xs-11 col-md-offset-1" style="text-align:center">
                            <ul class="liste">
                                <li>@Html.RouteLink(Resources.Home.Anasayfa,"Anasayfa")</li>
                                <li>@Html.RouteLink(Resources.Home.Odalar,"Odalar")</li> 
                               @if (User.Identity.IsAuthenticated) { 
                                 <li>@Html.RouteLink(Resources.Home.Rezervasyon,"Rezervasyon")</li>}
                                <li>@Html.RouteLink(Resources.Home.Kampanyalar,"Kampanyalar")</li>
                                <li>@Html.RouteLink(Resources.Home.Etkinlikler,"Etkinlikler")</li>
                                <li>@Html.RouteLink(Resources.Home.Hakkımızda, "Hakkimizda")</li>
                               
                                @if(User.IsInRole("Admin"))
                                {
                                <li>@Html.RouteLink(Resources.Home.Admin,"Admin")</li>
                                }
                            </ul> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <div class="container body-content icerik"> 
        @RenderBody()
        <hr />
        <footer class="alt" style="background-color:#330B24;">
            <div class="row">
                <div class="col-md-4 alt" style="color:#99FFB3">
                   
                </div>
                <div class="col-md-4 alt" style="text-align:center;color:#99FFB3">
                    @Html.RouteLink(Resources.Home.Anasayfa, "Anasayfa") &
                    @Html.RouteLink(Resources.Home.Hakkımızda, "Hakkimizda") 
                    <br />&ensp;&ensp;
                    <a>Tüm Haklar Saklıdır @@2015</a> 
                </div>
            </div>

        </footer>
    </div> 
     
     
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false) 
</body>
</html>
