@model IEnumerable<OtelEleven.Models.Slider>

@{
    ViewBag.Title = "Resimler";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
  

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <p class="col-md-8">
        <table class="table table-responsive">
            <tr>
                <th>
                      @Html.DisplayNameFor(model => model.ResimAdi)
                </th>
                <th class="text-center">
                   @Html.DisplayNameFor(model => model.Resim)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.Resim != null)
                {
                    <tr >
                        <td>
                           @Html.DisplayFor(modelItem => item.ResimAdi) 
                        </td>
                        <td>

                            <div class="col-md-10"><img style="width: 100%; height: auto;" src="data:image/png;base64,@System.Convert.ToBase64String(item.Resim)"> </div>
                        </td>
                        <td class="col-md-4"> 
                            
                                 @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                 @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                 @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            


                    </td>


                </tr>
                }
            }

        </table>

    </div>
</div>